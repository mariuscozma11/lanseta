{
  "expo": {
    "name": "Lanseta - Pescuit România",
    "slug": "lanseta-fishing-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "lanseta",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "platforms": ["ios", "android"],
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1565C0"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.lanseta.fishing",
      "infoPlist": {
        "NSCameraUsageDescription": "Această aplicație folosește camera pentru a face poze cu capturile de pești.",
        "NSPhotoLibraryUsageDescription": "Această aplicație accesează galeria foto pentru a selecta imagini cu capturile de pești."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#1565C0"
      },
      "package": "com.lanseta.fishing",
      "permissions": [
        "ACCESS_FINE_LOCATION", 
        "ACCESS_COARSE_LOCATION",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "plugins": [
      "expo-router",
      "expo-location",
      "expo-image-picker",
      "expo-camera",
      "expo-media-library"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
